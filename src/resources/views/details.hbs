<section class='max-w-2xl mx-auto my-8'>
  <div
    class='flex flex-col items-center bg-white border border-gray-200 rounded-lg shadow md:flex-row md:max-w-xl hover:bg-gray-100'
  >
    <img
      class='object-cover w-full rounded-t-lg h-96 md:rounded-l-lg'
      src='{{course.img}}'
      alt='{{course.name}}'
    />
    <div class='flex flex-col justify-between p-4 leading-normal'>
      <h5
        class='mb-2 text-2xl font-bold tracking-tight text-gray-900'
      >{{course.name}}</h5>
      <p class='mb-3 font-normal text-gray-700'>{{course.desc}}</p>
    </div>
  </div>
</section>